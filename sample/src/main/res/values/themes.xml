<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Compass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_jeans_700</item>
        <item name="colorPrimaryVariant">@color/blue_jeans_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/candy_pink_700</item>
        <item name="colorSecondaryVariant">@color/candy_pink_900</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="backgroundColor">@color/gun_metal_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Compass.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Compass.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Compass.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>